#!/bin/sh
if ! [ -n "$1" ]
then
    echo "Usage:\n\n$0 <dir>\n"
    exit 1
fi
if ! [ -d $1 ]
then
    mkdir $1
fi
cd $1
virtualenv-2.7 .
bin/pip install zc.buildout
bin/buildout init
cat << EOF > buildout.cfg
[buildout]
extends = http://pythonpackages.com/buildout/plone/4.3.x
EOF
bin/buildout
#bin/plone start
#sleep 4
#echo "Adding Plone site..."
#curl -d form.submitted:boolean="True" http://admin:admin@localhost:8080/@@plone-addsite\?site_id=Plone
#bin/plone stop
bin/plone fg
